<% unless (
  (data.meta.dig(:author, :avatar) || "").blank? &&
  (data.meta.dig(:author, :name) || "").blank? ||
  (paginate && page_number > 1)
) %>
  <div class="-mt-2 mb-16 flex items-center">
  <% unless (data.meta.dig(:author, :avatar) || "").blank? %>
    <div class="mr-5 shrink-0 rounded-full border-[0.5px] border-black/10 bg-white/50 p-3 shadow dark:bg-white/[15%]">
      <%= vite_scaled_image_tag(
        "images/#{data.meta.author.avatar}",
        alt: data.meta.name || data.meta.title,
        class: "my-0 aspect-square w-16 rounded-full bg-black/5 dark:bg-black/80",
        max_scale: 6
      ) %>
    </div>
  <% end %>
  <% unless (data.meta.dig(:author, :name) || "").blank? %>
    <div>
      <h1 class="mb-2 mt-3 text-[1.6rem] font-bold">
        <%= data.meta.dig(:author, :name) %>
      </h1>
      <div class="break-words">
        <%= data.meta.bio || "A personal blog by #{data.meta.author.name}" %>
      </div>
    </div>
  <% end %>
  </div>
<% end %>

